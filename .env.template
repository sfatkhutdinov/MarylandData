# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains sensitive API keys

# Census Bureau API Key (required for demographic data)
# Get your key at: https://api.census.gov/data/key_signup.html
CENSUS_API_KEY=your_census_api_key_here

# Bureau of Labor Statistics API Key (optional, but recommended for rate limits)
# Register at: https://data.bls.gov/registrationEngine/
BLS_API_KEY=your_bls_api_key_here

# Project Configuration
PROJECT_NAME=MarylandData
STUDY_AREA_ZIP=21076
STUDY_AREA_NAME=Hanover_MD

# Data Storage Paths (adjust as needed)
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
OUTPUT_PATH=./visuals

# Analysis Settings
CONFIDENCE_LEVEL=0.90
DEFAULT_MARGIN_OF_ERROR=0.05

# Optional: Database connection (if using one)
# DATABASE_URL=postgresql://username:password@localhost:5432/hanover_analysis

# Optional: Visualization settings
FIGURE_DPI=300
FIGURE_FORMAT=png